<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
        <RelativeLayout
         android:layout_width="match_parent"
          android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
          android:layout_marginRight="15dp"
         android:layout_height="match_parent">
<TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:text="@string/dashboard"
       android:textStyle="bold" 
        android:textColor="@android:color/black"
        android:id="@+id/dashboard"
     
       
       android:textSize="40sp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        app:cardElevation="30px"
         android:layout_alignRight="@+id/dashboard"
            android:layout_alignParentRight="true"
        
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/dp" 
       />
   </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard"
        android:backgroundTint="#2C62FF"
        android:layout_marginTop="50dp"
     
        app:cardCornerRadius="15dp"
      
        android:id="@+id/dashboardcard1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:textSize="15sp"
              
                android:textStyle="bold"
            android:id="@+id/january"
                android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
           android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
            android:text="@string/january"/>
        <ImageView
                
       android:background="@drawable/doller"
               android:layout_below="@+id/january"
            android:layout_width="wrap_content"
                android:id="@+id/doller" 
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/january"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs"
                android:layout_toRightOf="@+id/doller"
                android:textSize="40sp"
                 android:layout_marginTop="6dp"
                android:id="@+id/rs"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_below="@+id/january"
               android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:background="@drawable/chart"
                android:contentDescription="description" />
           <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar1"
                android:layout_below="@+id/rs"
                android:progressTint="@android:color/white"
                android:progress="70"
                android:layout_marginLeft="20dp"
                
                android:progressBackgroundTint="@android:color/white"
               android:layout_marginRight="70dp"
                android:layout_marginTop="3dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" 
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="70%"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
           
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rs"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dailyspendtarget"
                android:layout_below="@+id/progressBar1"
                android:text="@string/Daily_spend_target"
                android:paddingBottom="19dp"
                android:layout_marginTop="5dp"
                 android:textSize="15sp"
                android:textStyle="bold"

                 android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"/>
          
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/dialyspendprice"
                 android:textSize="15sp"
                 android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_below="@+id/progressBar1"
                android:layout_toRightOf="@+id/dailyspendtarget"
              android:layout_marginTop="5dp"
            
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
<TextView
    android:layout_width="wrap_content"
        android:layout_below="@+id/dashboardcard1"
        android:text="@string/daily_spend"
        android:layout_marginLeft="15dp"
            android:id="@+id/dailyspend"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
    android:layout_height="wrap_content"/>
    <TextView
         android:layout_width="wrap_content"
        android:layout_below="@+id/dashboardcard1"
        android:text="@string/see_all"
            android:layout_marginRight="15dp"
            
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_below="@+id/dailyspend"
            android:layout_height="wrap_content"
              app:cardCornerRadius="15dp"
            android:layout_marginTop="5dp"
            android:minWidth="25px"
            android:minHeight="25px">

            <RelativeLayout
                            android:layout_marginLeft="35dp"
                android:layout_width="match_parent"
                 android:layout_marginTop="15dp"
                  android:layout_marginRight="15dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chart"
                    android:background="@color/darkblue"
                    android:id="@+id/bank"
                    tools:ignore="ContentDescription" 
                  />
             <TextView
                android:text="@string/Net_Banking"
                     android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/bank"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/netbanking"
                    android:textColor="@android:color/black"
                    
                     android:layout_height="wrap_content"
                />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                    android:layout_below="@+id/netbanking"
                    android:text="@string/netbankprice"
                    android:layout_marginLeft="10dp"
                     android:layout_marginTop="9dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/bank"/>
                <TextView
                    android:layout_marginTop="14dp"
                    android:id="@+id/netbankprice"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Lightblue"
                    android:layout_height="wrap_content"
                    android:text="@string/netbankdate"/>
                  <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chart"
                    android:background="@color/darkblue"
                    android:id="@+id/food"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/bank"
                    tools:ignore="ContentDescription" 
                  />
             <TextView
                android:text="food"
                    
                     android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/food"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/bank"
                     android:layout_marginTop="10dp"
                    android:id="@+id/foodtext"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                     android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                    android:layout_below="@+id/foodtext"
                    android:layout_marginTop="9dp"
                    android:textColor="@android:color/black"
                    android:text="@string/foodprice"
                    android:layout_toRightOf="@+id/food"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Lightblue"
                    android:layout_below="@+id/bank"
                    android:layout_height="wrap_content"
                    android:text="@string/fooddate"/>
                 <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chart"
                    android:background="@color/darkblue"
                    android:id="@+id/clothes"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/food"
                    
                    tools:ignore="ContentDescription" 
                  />
             <TextView
                android:text="@string/clothes"
                     android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/clothes"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/food"
                     android:layout_marginTop="10dp"
                    android:id="@+id/clothestext"
                    android:textColor="@android:color/black"
                    
                     android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                     android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                    android:layout_below="@+id/clothestext"
                    android:layout_marginTop="9dp"
                    android:textColor="@android:color/black"
                    android:text="@string/clothprice"
                     android:paddingBottom="19dp"
                    android:layout_toRightOf="@+id/clothes"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Lightblue"
                    android:layout_below="@+id/food"
                    android:layout_height="wrap_content"
                    android:text="@string/clothdate"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
</RelativeLayout>